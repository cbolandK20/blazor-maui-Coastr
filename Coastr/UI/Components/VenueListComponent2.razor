@inject NavigationManager navigation

<MudDataGrid Items="@Model" Filterable="false" SortMode="@SortMode.None" Groupable="false" FixedHeader="true" Height="100%">
    <NoRecordsContent>
        - keine Daten vorhanden -
    </NoRecordsContent>
    <Columns>
        <PropertyColumn Property="x => x.Name" />
        <TemplateColumn CellClass="d-flex justify-end">
            <CellTemplate>
                <MudStack Row>
                    @{
                        var linkTarget = $"/editVenue/{ context.Item.Id.Value }";
                    }
                    <MudButton Size="@Size.Small" Variant="@Variant.Filled" Color="@Color.Primary" Href="@linkTarget">Details</MudButton>
                    <MudButton Size="@Size.Small" Variant="@Variant.Filled" Color="@Color.Primary">Delete</MudButton>
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
</MudDataGrid>

@code {
    [Parameter]
    public IList<Venue> Model { get; set; } = null;

    [Parameter]
    public string ReturnUrl { get; set; } = "/";
    
}
