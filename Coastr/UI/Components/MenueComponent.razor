@inject NavigationManager navigation;

<MudDataGrid Items="@Model.Items" Filterable="false" SortMode="@SortMode.None" Groupable="false" FixedHeader="true" Height="100%">
    <NoRecordsContent>
        @AppMessages.MSG_NO_DATA
    </NoRecordsContent>
    <Columns>
        <PropertyColumn Property="x => x.Name" Title="Name" />
        <PropertyColumn Property="x => x.Price" Title="Preis" Format="C" />
        @if (!ReadOnly)
        {
            <TemplateColumn CellClass="d-flex justify-end">
                <CellTemplate>
                    @{
                        var linkTarget = $"/editMenuItem/{context.Item.Id.Value}";
                    }
                    <MudIconButton  Icon="fa-solid fa-pen" Variant="@Variant.Filled" Color="@Color.Primary" Href="@linkTarget" />
                </CellTemplate>
            </TemplateColumn>
        }
    </Columns>
</MudDataGrid>

@code {
    [Parameter]
    public Coastr.Model.Menu Model { get; set; }

    [Parameter]
    public bool ReadOnly { get; set; } = false;

    [Parameter]
    public string ReturnUrl { get; set; } = "/";

}
